<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdatFelvetelActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Főző"
        android:textSize="25sp"
        android:id="@+id/editTextFozo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gyümölcs"
        android:textSize="25sp"
        android:id="@+id/editTextGyumolcs"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alkoholtartalom %"
        android:textSize="25sp"
        android:id="@+id/editTextAlkoholtartalom"
        android:inputType="number"
        android:maxLength="2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRogzit"
        android:text="Rögzít"
        android:textSize="25sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRogzitVissza"
        android:text="Vissza"
        android:textSize="25sp"/>

</LinearLayout>